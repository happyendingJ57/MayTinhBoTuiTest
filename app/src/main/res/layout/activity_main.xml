<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvNhap"
        style="@style/style_text_display"
        android:layout_gravity="end" />

    <TextView
        android:id="@+id/tvKetQua"
        style="@style/style_text_display"
        android:layout_gravity="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <Button
            android:id="@+id/btnDeleteAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:text="C"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Delete"/>

        <Button
            android:id="@+id/btnCong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <Button style="@style/style_button_normal"
            android:id="@+id/btn7"
            android:text="7"/>

        <Button style="@style/style_button_normal"
            android:text="8"
            android:id="@+id/btn8"/>

        <Button style="@style/style_button_normal"
            android:text="9"
            android:id="@+id/btn9"/>

        <Button style="@style/style_button_normal"
            android:text="-"
            android:id="@+id/btnTru"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <Button style="@style/style_button_normal"
            android:text="4"
            android:id="@+id/btn4"/>

        <Button style="@style/style_button_normal"
            android:text="5"
            android:id="@+id/btn5"/>

        <Button style="@style/style_button_normal"
            android:text="6"
            android:id="@+id/btn6"/>

        <Button style="@style/style_button_normal"
            android:text="x"
            android:id="@+id/btnNhan"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <Button style="@style/style_button_normal"
            android:text="1"
            android:id="@+id/btn1"/>

        <Button style="@style/style_button_normal"
            android:text="2"
            android:id="@+id/btn2"/>

        <Button style="@style/style_button_normal"
            android:text="3"
            android:id="@+id/btn3"/>

        <Button style="@style/style_button_normal"
            android:text="/"
            android:id="@+id/btnChia"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <Button style="@style/style_button_no_normal"
            android:text="0"
            android:id="@+id/btn0"/>

        <Button style="@style/style_button_normal"
            android:text="."
            android:id="@+id/btnThapPhan"/>

        <Button style="@style/style_button_normal"
            android:text="="
            android:id="@+id/btnKetQua"/>
    </LinearLayout>


</LinearLayout>